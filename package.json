{
    "private": true,
    "name": "test-nodejs-request",
    "description": "Testing making requests in pure Node.js",
    "version": "1.0.0",
    "license": "MIT",
    "author": {
        "name": "Piotr Kowalski",
        "email": "piecioshka@gmail.com",
        "url": "https://piecioshka.pl/"
    },
    "scripts": {
        "clear": "rm -rf dist/ coverage/ .nyc_output/",
        "clear:all": "rm -rf node_modules/ && npm run clear",
        "test": "npm run test:mocha",
        "test:mocha": "mocha",
        "test:mocha:watch": "mocha --watch",
        "coverage": "nyc npm run test && nyc report --reporter=html",
        "coveralls": "nyc npm run test && nyc report --reporter=text-lcov | coveralls -v",
        "lint": "eslint ."
    },
    "devDependencies": {
        "chai": "^4.3.4",
        "coveralls": "^3.1.1",
        "eslint": "^8.5.0",
        "eslint-config-piecioshka": "^2.0.4",
        "jasmine": "^3.10.0",
        "mocha": "^9.1.3",
        "nock": "^13.2.1",
        "nyc": "^15.1.0"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:piecioshka/test-nodejs-request.git"
    }
}
